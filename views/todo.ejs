<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        button
        {
            border: none;
            background: none;
        }
    </style>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <%- include("../public/temp/logedIn") %>
    <div class="changer">></div>
    <div class="legendaOff">
        <div class="closeButton">&#10005;</div>
        Legenda terminów realizacji:
        <div class="l1">
            Powyżej 5 dni: <span id="green"></span>
        </div>
        <div class="l1">
            Poniżej 2 dni: <span id="orange"></span>
        </div>
        <div class="l1">
            Termin dzisiejszy: <span id="red"></span>
        </div>
        <div class="l1">
            Po terminie: <span id="black"></span>
        </div>
    </div>
    <main>
        <div class="toDoList">
            <h3>Do zrobienia</h3>
            <% for(let d of to) {%>
                <div class="box">
                <div class="dataBox">
                    <a class="abc" href="/toDo/<%= find._id %>/<%= d._id %>/edit">
                            <%= d.title %>
                    </a>
                    <div class="dateCheck<%= d.bord %>"><%= d.date %> <span>&#10005;</span> </div>
                </div>
                <form action="/toDo/<%= find._id %>/<%= d._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">&#10005;</button>
                </form>
                </div>
            <% } %> 
        </div>
        <div class="toDoList">
            <h3>W trakcie</h3>
            <% for(let d of wh) {%>
                <div class="box">
                <div class="dataBox">
                    <a class="abc" href="/toDo/<%= find._id %>/<%= d._id %>/edit">
                            <%= d.title %>
                    </a>
                    <div class="dateCheck<%= d.bord %>"><%= d.date %> <span>&#8987;</span> </div>
                </div>
                <form action="/toDo/<%= find._id %>/<%= d._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">&#10005;</button>
                </form>
                </div>
            <% } %> 
        </div>       
        <div class="toDoList">
            <h3>Zrobione</h3>
            <% for(let d of done) {%>
                <div class="box">
                <div class="dataBox">
                    <a class="abc" href="/toDo/<%= find._id %>/<%= d._id %>/edit">
                            <%= d.title %>
                    </a>
                    <div class="dateCheck<%= d.bord %>"><%= d.date %> <span>&#10003;</span> </div>
                </div>
                <form action="/toDo/<%= find._id %>/<%= d._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">&#10005;</button>
                </form>
                </div>
            <% } %> 
        </div>
    </main>
    <script src="/app.js"></script>
    <a href="<%= find._id %>/new"><div class="addTask"><button type="button" class="btn btn-success w-100">Dodaj Zadanie</button></div></a>
</body>
</html>